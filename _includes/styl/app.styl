body.app
  background-color: #eee

  .top-bar
    position: fixed
    top: 0
    width: 100%
    z-index: 2
    margin-bottom: 0
    display: none

    li.name
      white-space: nowrap

    .top-bar-section
      padding-right: 15px

  .app-page
    background: url('/img/bg.png')
    border-bottom: 1px solid #ccc
    padding: 0 20px

    .app-page-inner
      max-width: 1000px
      margin: 0 auto

    h2, h3
      text-align: center
      color: #0f1e3f

    h2
      text-shadow: 0px -2px 2px #fff
      padding-top: 20px
      margin-bottom: 10px

    h3
      font-weight: 400
      font-size: 20px

    .main-screenshot-row
      display: table-row

      .img-wrapper, .call-to-action
        display: table-cell
        vertical-align: middle

      .img-wrapper
        width: 65%

      .call-to-action
        text-align: center
        width: 35%

        .or
          color: #999
          text-transform: uppercase

        .find-out-more-button
          margin-top: 1.03em


@media only screen and (min-width: 768px)
  body.app
    padding-top: 40px

    .top-bar
      display: block