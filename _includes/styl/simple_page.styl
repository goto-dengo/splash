body.simple_page
  background-color #eee

  .top-bar
    margin-bottom 0

  .simple-page-inner
    background: url('/img/bg.png')
    padding 20px

  h2, h3
    text-align: center
    color: #0f1e3f

  h2
    text-shadow: 0px -2px 2px #fff
    margin-bottom: 10px
    font-size: 22px

  h3
    font-weight: 400
    font-size: 14px

  footer
    border-top: 1px solid #ddd

.download-ebook-form
  margin 20px auto 0
  max-width 400px

  input, button
    margin-bottom 8px

  .disclaimer
    font-size 11px
    line-height 13px
    color #666

.download-ebook-link
  text-align center
  max-width 400px
  margin 20px auto 0
  font-size: 13px

  .link
    margin-top 10px

.chapters
  text-align center

  .chapters-header
    color: #0f1e3f
    text-shadow: 0px -2px 2px #fff
    font-size 18px
    font-weight bold
    margin 30px 0

  li
    .icon
      font-size 64px

    .chapter-title
      margin-top 5px
      font-weight bold
      font-size 14px

    p
      font-weight 400
      font-size 13px
      line-height 1.4


@media only screen and (min-width: 768px)
  body.simple_page

    h2
      font-size 2.1em

    h3
      font-size 20px
      padding-bottom: 20px


  .download-ebook-form
    input, button
      height 3em
      padding 1em

  .chapters
    max-width 1100px
    margin 0 auto

    .chapters-header
      text-align left
      margin 60px 0 20px
      font-size 24px

    li
      text-align left

      .icon
        float left
        font-size 80px
        margin-right 20px
        margin-top 20px

      .chapter-title
        font-size 16px
        margin-bottom 5px
